{
    "name": "dotdo/{{name}}-do",
    "description": "{{Name}}.do SDK - {{description}}",
    "type": "library",
    "license": "MIT",
    "keywords": ["{{name}}", "rpc", "dotdo", "sdk"],
    "homepage": "https://{{name}}.do",
    "authors": [
        {
            "name": "DotDo",
            "email": "sdk@dotdo.dev"
        }
    ],
    "require": {
        "php": ">=8.2",
        "dotdo/rpc-do": "^0.1.0",
        "guzzlehttp/guzzle": "^7.8",
        "ratchet/pawl": "^0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "DotDo\\{{Name}}\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DotDo\\{{Name}}\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests",
        "cs": "phpcs src tests"
    },
    "config": {
        "sort-packages": true
    }
}
