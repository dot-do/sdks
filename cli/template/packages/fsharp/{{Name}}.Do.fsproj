<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- Package Information -->
    <PackageId>{{Name}}.Do.FSharp</PackageId>
    <Version>0.1.0</Version>
    <Authors>DotDo</Authors>
    <Company>DotDo</Company>
    <Description>{{Name}}.do SDK for F# - {{description}}</Description>
    <PackageTags>{{name}};rpc;dotdo;sdk;fsharp</PackageTags>
    <PackageProjectUrl>https://{{name}}.do</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dot-do/{{name}}</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="src/{{Name}}Error.fs" />
    <Compile Include="src/{{Name}}Client.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Rpc.Do" Version="0.1.0" />
    <PackageReference Include="FSharp.Core" Version="8.0.0" />
  </ItemGroup>

</Project>
