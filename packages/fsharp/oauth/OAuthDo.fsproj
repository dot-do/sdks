<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>OAuthDo</RootNamespace>
    <PackageId>OAuthDo.FSharp</PackageId>
    <Version>0.1.0</Version>
    <Authors>Drivly</Authors>
    <Description>Device flow OAuth SDK for the .do platform (F#)</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/drivly/oauth.do</PackageProjectUrl>
    <RepositoryUrl>https://github.com/drivly/oauth.do</RepositoryUrl>
    <PackageTags>oauth;authentication;device-flow;sdk;fsharp</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="src/TokenStorage.fs" />
    <Compile Include="src/DeviceFlow.fs" />
    <Compile Include="src/OAuthClient.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FSharp.Core" Version="8.0.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
  </ItemGroup>

</Project>
