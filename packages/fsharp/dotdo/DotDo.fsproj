<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>DotDo</PackageId>
    <Version>0.1.0</Version>
    <Authors>DotDo</Authors>
    <Description>F# DotDo platform client with authentication, connection pooling, and retry logic</Description>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <WarnOn>3390;$(WarnOn)</WarnOn>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="src/DotDo.fs" />
  </ItemGroup>

  <ItemGroup>
    <!-- HTTP Client and JSON -->
    <PackageReference Include="FSharp.Data" Version="6.4.0" />
    <PackageReference Include="FSharp.SystemTextJson" Version="1.3.13" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../rpc/DotDo.Rpc.fsproj" />
  </ItemGroup>

</Project>
