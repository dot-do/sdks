{
  "name": "@dotdo/conformance-runner",
  "version": "0.1.0",
  "description": "Cross-language conformance test runner for DotDo RPC implementations",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "conformance-runner": "./dist/cli.js",
    "dotdo-conformance": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "check:publish": "node -e \"const pkg = require('./package.json'); const deps = JSON.stringify(pkg.dependencies || {}); if (deps.includes('workspace:')) { console.error('ERROR: workspace: protocol found in dependencies. Replace with actual versions before publishing.'); process.exit(1); }\"",
    "prepublishOnly": "pnpm check:publish && pnpm build"
  },
  "keywords": [
    "dotdo",
    "rpc",
    "conformance",
    "testing",
    "cross-language"
  ],
  "author": "DotDo",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "picocolors": "^1.1.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
