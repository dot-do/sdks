{
  "name": "oauth.do",
  "version": "0.1.0",
  "description": "OAuth authentication for DotDo CLI and SDK - Local CLI authentication with secure token storage",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./storage": {
      "types": "./dist/storage.d.ts",
      "import": "./dist/storage.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js"
    },
    "./device": {
      "types": "./dist/device.d.ts",
      "import": "./dist/device.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "oauth",
    "dotdo",
    "authentication",
    "cli",
    "keychain",
    "token",
    "device-flow"
  ],
  "author": "DotDo",
  "license": "MIT",
  "dependencies": {
    "keytar": "^7.9.0",
    "open": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
